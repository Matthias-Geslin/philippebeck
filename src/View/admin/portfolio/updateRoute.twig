{% extends 'layout/layout.twig' %}

{% block title %}Edition d'un parcours{% endblock %}

{% block description %}{% endblock %}


{% block main %}

<main>

  <!-- Update route form -->
  <form method="post" action={{ url('route!update', {'id': route.id}) }}>
    <fieldset>
      <legend>
        <i class="fa fa-road fa-fw fa-2x" aria-hidden="true"></i>
      </legend>
      <ul>

        <!-- Route name field -->
        <li>
          <label for="name">Nom</label>
            <input id="name" name="name" type="text" maxlength="100" required value="{{ route.name }}">
        </li>

        <!-- Route certif id field -->
        <li>
          <label for="certif_id">Id</label>
            <input id="certif_id" name="certif_id" type="text" maxlength="20" required value="{{ route.certif_id }}">
        </li>

        <!-- Route certif link field -->
        <li>
          <label for="certif_link">Lien</label>
            <input id="certif_link" name="certif_link" type="text" maxlength="100" required value="{{ route.certif_link }}">
        </li>

        <!-- Route certif date field -->
        <li>
          <label for="certif_date">Date</label>
            <input id="certif_date" name="certif_date" type="text" maxlength="30" required value="{{ route.certif_date}}">
        </li>

        <!-- Controls buttons -->
        <li class="btn-group">
          <a class="btn delete-btn outset-slight inset-blur" href="{{ url('admin') }}">Quitter</a>
          <input class="btn cancel-btn outset-slight inset-blur" type="reset" value="RÃ©initialiser">
          <input class="btn valid-btn outset-slight inset-blur" type="submit" value="Modifier">
        </li>

      </ul>
    </fieldset>
  </form>
</main>

{% endblock %}
