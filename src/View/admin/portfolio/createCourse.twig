{% extends 'layout/layout.twig' %}

{% block title %}Ajout d'un nouveau cours{% endblock %}

{% block description %}{% endblock %}


{% block main %}

<main>

  <!-- Create course form -->
  <form method="post" action={{ url('course!create') }}>
    <fieldset>
      <legend>
        <i class="fa fa-book fa-fw fa-2x" aria-hidden="true"></i>
      </legend>
      <ul>

        <!-- Course name field -->
        <li>
          <label for="name">Nom</label>
          <input id="name" name="name" type="text" placeholder="Nom du cours" maxlength="100" required>
        </li>

        <!-- Course link field -->
        <li>
          <label for="link">Cours</label>
          <input id="link" name="link" type="text" placeholder="Lien vers le cours" maxlength="100" required>
        </li>

        <!-- Course certif link field -->
        <li>
          <label for="certif_link">Certificat</label>
          <input id="certif_link" name="certif_link" type="text" placeholder="Lien vers le certificat" maxlength="100" required>
        </li>

        <!-- Course certif id field -->
        <li>
          <label for="certif_id">Id</label>
          <input id="certif_id" name="certif_id" type="text" placeholder="Id du certificat" maxlength="20" required>
        </li>

        <!-- Course certif date field -->
        <li>
          <label for="certif_date">Date</label>
          <input id="certif_date" name="certif_date" type="text" placeholder="Date de certification" maxlength="30" required>
        </li>

        <!-- Controls buttons -->
        <li class="btn-group">
          <a class="btn delete-btn outset-slight inset-blur" href="{{ url('admin') }}">Quitter</a>
          <input class="btn cancel-btn outset-slight inset-blur" type="reset" value="Réinitialiser">
          <input class="btn valid-btn outset-slight inset-blur" type="submit" value="Créer">
        </li>

      </ul>
    </fieldset>
  </form>
</main>

{% endblock %}
